<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ViewVehicleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/ChildProfiletoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ToolbarWhiteArrow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:gravity="center"
                        android:text="Vehicle Detail"
                        android:textColor="@color/colorAppMain"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:layout_weight="1.5"
                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:scaleType="fitCenter"
                        android:layout_height="72dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/logo_high"
                        android:layout_weight="0.5"/>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/txtVehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="Vehicle Name"
                    android:textColor="@color/colorAppMain"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="0.7"
                        android:scaleType="fitXY"
                        android:background="@color/colorAppMain"
                        android:id="@+id/vehicle_image"/>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1.3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Number: "
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_weight="1.5"
                                android:id="@+id/txtVehicleNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Position"
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_weight="0.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Model: "
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_weight="1.5"
                                android:id="@+id/txtModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Model"
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_weight="0.3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Licence End Date: "
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_weight="1.7"
                                android:id="@+id/txtLicenseDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text=" "
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:textStyle="bold"
                                android:text="Insurance End Date:"
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtInsuranceEndStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1.7"
                                android:text=" "
                                android:textColor="@color/colorlightBlack"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/txtidFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:text="View ID"
                        android:visibility="gone"
                        android:layout_weight="0.5"
                        android:background="@drawable/view_button_drawable"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Examination Date:"
                            android:layout_weight="0.3"
                            android:textColor="@color/colorlightBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtExamineDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1.7"
                            android:text=" "
                            android:textColor="@color/colorlightBlack"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>